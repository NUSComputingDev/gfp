<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>me.page.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>me.page.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Redeem</servlet-name>
        <servlet-class>me.page.Redeem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgotPassword</servlet-name>
        <servlet-class>me.page.ForgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>activateRequest</servlet-name>
        <servlet-class>me.page.ActivateRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resetPass</servlet-name>
        <servlet-class>me.page.ResetPass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Redeem</servlet-name>
        <url-pattern>/Redeem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forgotPassword</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>activateRequest</servlet-name>
        <url-pattern>/activateRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resetPass</servlet-name>
        <url-pattern>/resetPass</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <ejb-ref>
        <ejb-ref-name>EmailSender</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>emailremote.EmailRemoteInterface</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>EmailSender1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>emailremote.EmailRemoteInterface</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>EmailSender2</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>emailremote.EmailRemoteInterface</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>EmailSender3</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>emailremote.EmailRemoteInterface</remote>
    </ejb-ref>
</web-app>
